<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="info"
            type="com.unjhawalateaadmin.dashboard.data.model.AvailableTeaSampleInfo" />
    </data>
        
    <RelativeLayout
        android:id="@+id/routMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_6dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:layout_marginBottom="@dimen/size_6dp"
        android:background="@drawable/retailer_item_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_16dp"
        android:paddingTop="@dimen/size_12dp"
        android:paddingEnd="@dimen/size_14dp"
        android:paddingBottom="@dimen/size_12dp">

        <LinearLayout
            android:id="@+id/routDetailsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size_14dp"
            android:layout_toStartOf="@id/routButtonsView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_vietnam_regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryText2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2dp"
                android:fontFamily="@font/be_vietnam_regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryText2"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/routButtonsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgEdit"
                android:layout_width="@dimen/size_36dp"
                android:layout_height="@dimen/size_36dp"
                android:layout_marginEnd="@dimen/size_12dp"
                android:background="@drawable/img_circle_accent"
                android:backgroundTint="@color/colorAccentLight"
                android:padding="@dimen/size_9dp"
                app:srcCompat="@drawable/ic_edit"
                app:tint="@color/colorAccentText" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgDelete"
                android:layout_width="@dimen/size_36dp"
                android:layout_height="@dimen/size_36dp"
                android:background="@drawable/img_circle_accent"
                android:backgroundTint="@color/colorAccentLight"
                android:padding="@dimen/size_9dp"
                app:srcCompat="@drawable/ic_delete"
                app:tint="@color/colorAccentText" />

        </LinearLayout>


    </RelativeLayout>

</layout>