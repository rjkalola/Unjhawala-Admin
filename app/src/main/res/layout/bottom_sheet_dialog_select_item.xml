<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDF6E7"
            android:paddingStart="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_9dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginBottom="@dimen/size_15dp"
                android:fontFamily="@font/be_vietnam_medium"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_size_18sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgClose"
                android:layout_width="@dimen/size_36dp"
                android:layout_height="@dimen/size_36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_close" />

        </RelativeLayout>

        <View style="@style/DividerMedium" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_14dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@drawable/search_edittext_bg"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/size_10dp"
            android:fontFamily="@string/font_family_regular"
            android:hint="Search"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingStart="@dimen/size_14dp"
            android:paddingTop="@dimen/size_9dp"
            android:paddingEnd="@dimen/size_14dp"
            android:paddingBottom="@dimen/size_9dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp" />

        </RelativeLayout>
        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent" />-->


    </LinearLayout>

</layout>
