<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_6dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:layout_marginBottom="@dimen/size_6dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/routMainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/retailer_item_bg"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_14dp"
            android:paddingTop="@dimen/size_12dp"
            android:paddingEnd="@dimen/size_14dp"
            android:paddingBottom="@dimen/size_12dp">

            <LinearLayout
                android:id="@+id/routDetailsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/txtEdit"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCachar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/be_vietnam_medium"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="Cachar"
                    android:textColor="@color/colorPrimaryText2"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/size_6dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLocation"
                        android:layout_width="@dimen/size_12dp"
                        android:layout_height="@dimen/size_12dp"
                        app:srcCompat="@drawable/ic_location"
                        app:tint="#828282" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/be_vietnam_regular"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Dooars"
                        android:textColor="@color/colorSecondaryLightText"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.4dp"
                        android:visibility="gone"
                        android:layout_height="@dimen/size_12dp"
                        android:layout_marginStart="@dimen/size_9dp"
                        android:layout_marginEnd="@dimen/size_9dp"
                        android:layout_marginTop="@dimen/size_4dp"
                        android:layout_marginBottom="@dimen/size_4dp"
                        android:background="#828282" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/size_12dp"
                        android:visibility="gone"
                        android:layout_height="@dimen/size_12dp"
                        app:srcCompat="@drawable/ic_nest_eco_leaf"
                        app:tint="#828282" />

                    <TextView
                        android:id="@+id/txtPF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_4dp"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:fontFamily="@font/be_vietnam_regular"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Garden"
                        android:textColor="@color/colorSecondaryLightText"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/size_9dp"
                android:paddingEnd="0dp"
                android:paddingTop="@dimen/size_4dp"
                android:paddingBottom="@dimen/size_4dp"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:fontFamily="@font/be_vietnam_medium"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="@string/edit"
                android:textColor="@color/colorAccentText"
                android:textSize="14sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</layout>