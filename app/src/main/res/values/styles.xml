    <style name="ToolbarTitleFont">
        <item name="android:textSize">@dimen/text_size_19sp</item>
    </style>


    <style name="MediumFont">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="SmallFont">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="VerySmallFont">
        <item name="android:textSize">@dimen/text_size_13sp</item>
    </style>

    <style name="MediumFontTextView" parent="MediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallFontTextView" parent="SmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerySmallFontTextView" parent="VerySmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- This theme for splash screen-->


    <style name="ToolbarDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="DividerMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.75dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

